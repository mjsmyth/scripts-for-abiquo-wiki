<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <!-- Schema changes -->
    <changeSet context="data" author="mjsmyth" id="ABICLOUDPREMIUM-XXXXX-fix-wiki-links">
    {{#creates}}
        <sql>
            insert into system_properties (name, value) values ('{{ui_key}}', '{{wiki_link}}');
        </sql>    
    {{/creates}}
    {{#updates}}
        <sql>
            <update tableName="system_properties">
                <column>value='{{wiki_link}}'</column>
                <where>name='{{ui_key}}'</where>    
            </update>
        </sql>
    {{/updates}}
    {{#deletes}}
        <sql>
            <delete tableName="system_properties">
                <where>columnName='{{ui_key}}'</where>
        </delete>
    {{/deletes}}
    </changeSet>    
</databaseChangeLog>